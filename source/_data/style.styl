.menu {
  &__avatar {
    display: flex
    flex-direction: column
    align-items: center
    width: 100%
    margin: 2em auto
    &--img {
      width: 6vw
      height: 6vw
      border-radius: 50%
      border: 2px solid rgba(#fff, 0.6)
      box-shadow: boxShadow(0.1vw, 'light-out')
    }
    &--title {
      font-family: $title-font
      color: $color-blue-gray
      font-size: 1.6vw
      cursor: pointer
      user-select: none
      text-shadow: textShadow('light', 0.2vw, rgba(#E2EEF6, 0.8), rgba(#000, 0.5))
      opacity 0.6
    }
    &--ru {
      color: $color-red
    }
  } 
}